# SoundCloud API Credentials (OAuth 2.1)
# Get these from https://soundcloud.com/you/apps
# You must apply for API access - SoundCloud will review and approve your app
SOUNDCLOUD_CLIENT_ID=your_client_id_here
SOUNDCLOUD_CLIENT_SECRET=your_client_secret_here

# Your SoundCloud username
SOUNDCLOUD_USERNAME=your_username_here

# Number of latest tracks to retrieve (optional, default: 5 for static site)
TRACK_LIMIT=5

# Output file path (optional, default: tracks.json)
OUTPUT_FILE=tracks.json

# Embed player customization (optional)
# Color (hex without #, default: ff5500 - SoundCloud orange)
EMBED_COLOR=ff5500
# Auto-play (default: false)
EMBED_AUTO_PLAY=false
# Hide related tracks (default: false)
EMBED_HIDE_RELATED=false
# Show comments (default: true)
EMBED_SHOW_COMMENTS=true
# Show user info (default: true)
EMBED_SHOW_USER=true
# Show reposts (default: false)
EMBED_SHOW_REPOSTS=false
# Show teaser (default: true)
EMBED_SHOW_TEASER=true
